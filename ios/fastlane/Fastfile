# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Build a signed app"
  lane :build_signed do
    match(type: "appstore", readonly: true)
    build_app(
        workspace: "Runner.xcworkspace", 
        scheme: "Runner", 
        export_options: {
          method: "app-store"
        }
    )
  end

  desc "Deploy latest build to TestFlight"
  lane :deploy_internal do
    # force WebDAV publishing to avoid firewall issues (still having same issue though)
    # ENV["DELIVER_ITMSTRANSPORTER_ADDITIONAL_UPLOAD_PARAMETERS"] = "-t DAV"
    upload_to_testflight(
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end

  # combination of the above two lanes 
  desc "Build signed app and deploy to TestFlight"
  lane :build_signed_and_deploy_internal do
    match(type: "appstore", readonly: true)
    build_app(
        workspace: "Runner.xcworkspace", 
        scheme: "Runner", 
        export_options: {
          method: "app-store"
        }
    )
    # force WebDAV publishing to avoid firewall issues (still having same issue though)
    # ENV["DELIVER_ITMSTRANSPORTER_ADDITIONAL_UPLOAD_PARAMETERS"] = "-t DAV"
    upload_to_testflight(
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end
